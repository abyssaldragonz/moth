---
interface Props {
  title: string
  description: string
  image: string
}

const { title, description, image } = Astro.props
---
<div class="card">
    <h1>{title}</h1>
    <span>&rarr;</span>
    <img class="image" src={image} />

</div>

<style>
    .card {
        background-color: azure;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .image {
        width: 10rem;
    }
</style>