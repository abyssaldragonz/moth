---
interface Props {
	title: string;
	description: string;
	image: string;
}

const { title, description, image } = Astro.props;
---

<div class="flex flex-col items-center justify-center h-full border-2 border-gray-200 border-opacity-60 rounded-lg p-5">
	<h1>{title}</h1>
	<span>&rarr;</span>
	<img width={500} class="rounded-lg" src={image} />
</div>

<style>
	.card {
		background-color: azure;
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.image {
		width: 10rem;
	}
</style>
